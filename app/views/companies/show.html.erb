<div class="show">
  <div class="title">
    <h2> All Jobs for <strong><%= @company.name %></strong> </h2>
    <%= button_to 'New Job', new_company_job_path(@company), method: "get", class: 'btn btn-large btn-info' %>
  </div>

  <div class="company-container container-fluid">
    <% @company.jobs.each do |job| %>
    <div class="panel panel-default" class=job_<%= job.id %>>
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= link_to job.title, company_job_path(job) %>
        </h3>
      </div>
      <div class="panel-body">
        <%= button_to 'Details', company_job_path(job), method: "get", class: 'btn btn-large btn-success' %>
        <%= button_to 'Edit', edit_company_job_path(job), method: "get", class: 'btn btn-large btn-warning' %>
        <%= button_to 'Delete', company_job_path(job), method: "delete", class: 'btn btn-large btn-danger' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
