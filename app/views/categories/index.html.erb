<div class="index">
  <div class="title">
    <h1>All Categories</h1>
  </div>

  <div class="category-container container-fluid">
    <% @categories.each do |category| %>
    <div class="panel panel-default" class=category_<%= category.id %>>
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= link_to category.title, category_path(category) %>
          <span class="badge"><%= category.jobs.count %></span>
        </h3>
      </div>
      <div class="panel-body">
        <%= button_to('Details', category_path(category), class: 'btn btn-large btn-success') %>
        <%= button_to('Edit', edit_category_path(category), class: 'btn btn-large btn-warning') %>
        <%= button_to('Delete', category_path(category), method: "delete", class: 'btn btn-large btn-danger') %>
      </div>
    </div>
    <% end %>
  </div>
</div>
