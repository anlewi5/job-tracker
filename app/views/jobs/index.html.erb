<h2>
All Jobs
<% if @company %>
  <strong> for <%= @company.name %></strong>
<% elsif @category %>
  <strong> for <%= @category.title %></strong>
<% elsif params["sort"] == "interest" %>
  <strong>by Level of Interest</strong>
<% elsif params["sort"] %>
  <strong>by City</strong>
<% elsif params["location"] %>
  <strong>in <%= params["location"] %></strong>
<% end %>
</h2>

<h3> Total: <%= @jobs.count %> </h3>

<div class="company-container container-fluid">
  <% @jobs.each do |job| %>
  <div class="panel panel-default" class=job_<%= job.id %>>
    <div class="panel-heading">
      <h3 class="panel-title">
        <stong><%= link_to job.title, company_job_path(job.company.id, job.id) %> at <%= job.company.name %></strong>
        <br>
        City: <%= job.city %>
        <br>
        Level of Interest: <%= job.level_of_interest %>
      </h3>
    </div>
    <div class="panel-body">
      <%= button_to 'Edit', edit_company_job_path(job.company.id, job.id), method: "get", class: 'btn btn-large btn-warning' %>
      <%= button_to 'Delete', company_job_path(job.company.id, job.id), method: "delete", class: 'btn btn-large btn-danger' %>
    </div>
  </div>
  <% end %>
</div>
